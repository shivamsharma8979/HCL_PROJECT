
@{
    ViewBag.Title = "Emp_Form";
}

@model HCL_PROJECT.Models.EMPLOYEE
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Forms</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Basic Form Elements
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">


                                @using (Html.BeginForm("Emp_Form", "Home", FormMethod.Post))
                                {
                                    @Html.HiddenFor(m => m.id)
                                    <div class="form-group-lg">
                                        <label>name</label>
                                        @Html.TextBoxFor(m => m.name, new { @class = "form_control", placeholder = "Name", @required = "required" })
                                        @Html.ValidationMessageFor(m => m.name, " ", new { @class = "error" })
                                    </div>
                                    <div class="form-group-lg">
                                        <label>address</label>
                                        @Html.TextBoxFor(m => m.address, new { @class = "form_control", placeholder = "address", @required = "required" })
                                        @Html.ValidationMessageFor(m => m.address, " ", new { @class = "error" })
                                    </div>
                                    <div class="form-group-lg">
                                        <label>email</label>
                                        @Html.TextBoxFor(m => m.email, new { @class = "form_control", placeholder = "email", @required = "required" })
                                        @Html.ValidationMessageFor(m => m.email, " ", new { @class = "error" })
                                    </div>
                                    <div class="form-group-lg">
                                        <label>salary</label>
                                        @Html.TextBoxFor(m => m.salary, new { @class = "form_control", placeholder = "salary", @required = "required" })
                                        @Html.ValidationMessageFor(m => m.salary, " ", new { @class = "error" })
                                    </div>
                                    <div class="form-group-lg">
                                        <label>department</label>
                                        @Html.TextBoxFor(m => m.department, new { @class = "form_control", placeholder = "department", @required = "required" })
                                        @Html.ValidationMessageFor(m => m.department, " ", new { @class = "error" })
                                    </div>
                                    <button type="submit" class="btn btn-danger">Submit</button>
                                }

                            </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
</div>

<style>
    .error 
    {
        color:#ff0000;
    }
</style>