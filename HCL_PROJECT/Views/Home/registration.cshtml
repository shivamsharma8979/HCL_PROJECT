
@{
    ViewBag.Title = "registration";
}
@{ Layout = null;


}

<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

<link href="~/Content/css/metisMenu.min.css" rel="stylesheet" />


<link href="~/Content/css/startmin.css" rel="stylesheet" />

<link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
@model HCL_PROJECT.db_context.login


<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("registration", "Home", FormMethod.Post))
                    {
                    <fieldset>
                        <div class="form-group">
                            <label>NAME</label>
                            @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "NAME" , @required = "required" })
                            @Html.ValidationMessageFor(m => m.name, " ", new { @class = "error" })
                        </div>
                        <div class="form-group">
                            <label>EMAIL</label>
                            @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "EMAIL", @required = "required" })
                            @Html.ValidationMessageFor(m => m.email, "", new { @class = "error" })
                        </div>
                        <div class="form-group">
                            <label>PASSWORD</label>
                            @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "PASSWORD" , @required = "required" })
                            @Html.ValidationMessageFor(m => m.password, "", new { @class = "error" })
                        </div>

                        <!-- Change this to a button or input when using this as a form -->
                        <button type="submit" class="btn btn-outline btn-success ">submit</button>
                        <input class="btn  btn-outline btn-primary" type="reset" value="Reset">
                        <a href="@Url.Action("Index", "Home")" class="btn  btn-outline btn-default ">back</a>
                    </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error {
        color: red;
    }
</style>